{% extends 'PXTasksBundle::layout.html.twig' %}

{% block container %}




    <div class="row">

        <div class="span12">
            <div class="alert alert-block">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <h4>Warning!</h4>
                Best check yo self, you're not...
            </div>
        </div>
        <div class="span12">

            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Task #</th>
                    <th>Title</th>
                    <th>Code</th>
                    <th>Deadline</th>
                    <th>Progress</th>
                </tr>
                </thead>
                <tbody>

                {% for task in tasks %}
                <tr>
                    <td>{{ task.id }}</td>
                    <td>{{ task.taskName }}</td>
                    <td>{{ task.taskCode }}</td>
                    <td>{{ task.taskDeadline|date('d-m-Y') }}</td>
                    <td>
                        <div class="progress progress-warning">
                            <div class="bar" style="width: {{ task.taskProgress }}%">{{ task.taskProgress }}%</div>
                        </div>
                    </td>
                </tr>
                {% endfor %}


                </tbody>
            </table>

            <div class="pagination pagination-centered">
                <ul>
                    <li><a href="#">«</a></li>
                    <li><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li><a href="#">»</a></li>
                </ul>
            </div>

        </div>


    </div>

{% endblock %}